
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-dark">Product List </h2>
    </div>
    <div class="col-6">
        <div class="float-end">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Create New Product</a>
        </div>
    </div>
</div>

<br />

<div class="p-4 border rounded">
    <table class="table table-striped border" id="tblData">
        <thead class="thead-dark">
            <tr class="table-secondary">
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Created</th>
                <th>Modified</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {

    <script src="~/js/product.js"></script>
}


