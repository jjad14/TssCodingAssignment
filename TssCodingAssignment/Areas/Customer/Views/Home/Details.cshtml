@model TssCodingAssignment.Models.ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-10">
                    <h1 class="text-primary">@Model.Product.Name</h1>
                </div>
                <div class="col-2">
                    <span class="badge alert-info text-dark">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" style="height: 500px; width: 400px;" class="img-fluid rounded shadow" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="my-3 border rounded p-2">
                                <div class="row px-2">
                                    <h6 class="pb-2"><strong>Description</strong></h6>
                                </div>
                                <div class="row px-2">
                                    <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                                </div>
                            </div>
                            <div class=" col-12 my-3 pl-2">
                                <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                                    <div class="p-1 col-3 bg-secondary">
                                        <div>Pricing:</div>
                                    </div>
                                    <div class="p-1 col-3 bg-secondary">
                                        <div>@Model.Product.Price.ToString("c")</div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row pl-2">
                                <div class="col-4 col-lg-3 text-primary"><h4>Quantity</h4></div>
                                <div class="col-8 col-lg-9"><input class="form-control" asp-for="Count" /></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>